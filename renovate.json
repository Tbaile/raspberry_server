{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "schedule:monthly"
  ],
  "patch": {
    "automerge": true
  },
  "packageRules": [
    {
      "matchPackageNames": [
        "mariadb"
      ],
      "allowedVersions": "<= 10.6"
    },
    {
      "matchPackageNames": [
        "redis"
      ],
      "allowedVersions": "<= 6.2"
    },
    {
      "matchPackageNames": [
        "linuxserver/qbittorrent"
      ],
      "allowedVersions": "<= 4"
    },
    {
      "matchPackageNames": [
        "linuxserver/jellyfin"
      ],
      "allowedVersions": "<= 10"
    },
    {
      "groupName": "streaming_service",
      "matchFiles": [
        "streaming_service/docker-compose.yml"
      ]
    }
  ]
}
