{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "schedule:monthly"
  ],
  "patch": {
    "automerge": true
  },
  "packageRules": [
    {
      "matchPackageNames": [
        "linuxserver/jellyfin",
        "linuxserver/qbittorrent"
      ],
      "allowedVersions": "/^[0-9]+\\.[0-9]+\\.[0-9]+(\\.[0-9]+)?$/"
    }
  ]
}
